<h4 class="align-table"><%= @user.name %>'s Destinations</h4>
<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Must See Attraction</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @destinations.each do |trip| %>
    <tr class="border-bottom">
      <td class="no-underline"><%= link_to destination.city.name, user_destination_path(@user, destination) %></td>
      <td><%= destination.fave_attraction %></td>
      <% if @user == current_user %>
        <td><%= link_to "Edit Destination", edit_user_destination_url(@user, destination), :method => 'get' %></td>
      <% else %>
        <td> </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="button-below-table">
  <% if @user == current_user %>
    <%= link_to "Add A New Destination", new_user_destination_url(@user), :class => 'btn btn-sm btn-primary btn-rounded' %>
  <% end %>
</div>