<div class="info-box med-box">
  <h4 class="box-heading"><%= @user.name %>'s <%= @destination.city.name %> Trip!</h4>
  <p><span class="bold-text">Rating: </span><%= @destination.rating %></p>
  <p><span class="bold-text">Must See Attraction: </span><%= @destination.fave_attraction %></p>
  <p><span class="bold-text">Review: </span><%= @destination.comment %></p><br>


<% if @user == current_user %>
    <%= link_to "Edit Trip", edit_user_destination_url, :class => 'btn btn-sm btn-primary btn-rounded' %>
    <%= link_to "Delete Trip", user_destination_path, :method => 'delete', data: { confirm: "Are you sure?" }, :class => 'btn btn-sm btn-secondary btn-rounded' %>
  <% end %>