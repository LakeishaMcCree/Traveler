<div class="info-box">
  <h4 class="box-heading"><%= @user.name %></h4>
  <% if @user.destinations.count == 0 %>
    <p>You haven't added any destinations yet.</p><br>
    <%= link_to "Explore Destinations", cities_path, :class => 'btn btn-sm btn-secondary btn-rounded' %>
  <% else %>
    <p>You've added <%= pluralize(@user.destination_count, "trip") %>.</p>
    <span class="bold-text">Last Trip Added:</span>
    <span class="no-underline"><%= link_to @user.last_destination.city.name, user_destination_path(@user, @user.last_destination) %></span><br><br>
    <%= link_to "View My 5-Star Trips", five_star_url %><br><br>
    <%= link_to "See All My Trips", user_destinations_path(@user), :class => 'btn btn-sm btn-secondary btn-rounded' %>
  <% end %>
    <%= link_to "Add New Destination", new_user_destination_url(@user), :class => 'btn btn-sm btn-info btn-rounded' %>
</div>